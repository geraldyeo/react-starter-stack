{
  "name": "react-starter-stack",
  "version": "1.0.0",
  "description": "Get started with the React starter stack.",
  "main": "index.js",
  "keywords": [
    "react",
    "starter",
    "stack"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geraldyeo/react-starter-stack.git"
  },
  "author": "Gerald Yeo <gerald.yeo@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=5.5.0",
    "npm": "^3.7.3"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "babel-node bin/compile",
    "lint": "xo",
    "lint:fix": "npm run lint -- --fix",
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "dev:nw": "npm run dev -- --nw",
    "dev:no-debug": "npm run dev -- --no_debug",
    "test": "better-npm-run test",
    "test:dev": "npm run test -- --watch",
    "test-node": "better-npm-run test-node",
    "deploy": "better-npm-run deploy",
    "flow:check": "babel-node bin/flow-check"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec babel-node bin/server",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy": {
      "command": "npm run clean && npm run compile",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "start": {
      "command": "babel-node bin/server",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "babel-node ./node_modules/karma/bin/karma start bin/karma",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    },
    "test-node": {
      "command": "nyc ava | faucet",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "node:*"
      }
    }
  },
  "ava": {
    "files": [
      "./tests/**/*.ava.js"
    ],
    "failFast": true,
    "tap": true,
    "verbose": true
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "ignores": [
      "server/middleware/webpack-proxy.js"
    ],
    "envs": [
      "browser",
      "node",
      "es6"
    ],
    "globals": [
      "process.env",
      "NODE_ENV",
      "__DEV__",
      "__PROD__",
      "__TEST__",
      "__DEBUG__",
      "__DEBUG_NEW_WINDOW__",
      "__BASENAME__"
    ]
  },
  "dependencies": {
    "better-npm-run": "0.0.7",
    "co-request": "^1.0.0",
    "debug": "^2.2.0",
    "history": "^2.0.0",
    "http-proxy": "^1.13.2",
    "iconv-lite": "^0.4.13",
    "koa": "^2.0.0-alpha.3",
    "koa-connect-history-api-fallback": "^0.3.0",
    "koa-convert": "^1.2.0",
    "koa-static": "^2.0.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-helmet": "^2.3.1",
    "react-isomorphic-render": "^2.1.20",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "react-router-redux": "^3.0.0",
    "redux": "^3.3.1",
    "redux-actions": "^0.9.1",
    "redux-saga": "^0.9.1",
    "redux-thunk": "^1.0.3",
    "serialize-javascript": "^1.1.2",
    "url": "^0.11.0",
    "yargs": "^4.1.0"
  },
  "devDependencies": {
    "ava": "^0.12.0",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.3",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-es2015-webpack": "^6.3.14",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "babel-runtime": "^6.5.0",
    "cheerio": "^0.20.0",
    "css-loader": "^0.23.1",
    "csslint": "^0.10.0",
    "csslint-loader": "^0.2.1",
    "cssnano": "^3.5.2",
    "electron-prebuilt": "^0.36.8",
    "enzyme": "^2.0.0",
    "eslint": "^2.2.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-config-standard-react": "^2.3.0",
    "eslint-config-xo-react": "^0.4.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-babel": "^3.1.0",
    "eslint-plugin-flow-vars": "^0.1.3",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-react": "^4.0.0",
    "eslint-plugin-standard": "^1.3.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "faucet": "0.0.1",
    "file-loader": "^0.8.5",
    "flow-bin": "^0.22.0",
    "flow-interfaces": "^0.2.1",
    "fs-extra": "^0.26.5",
    "html-webpack-plugin": "^2.9.0",
    "imports-loader": "^0.6.5",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.21",
    "karma-coverage": "^0.5.3",
    "karma-electron-launcher": "^0.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-tap": "^1.0.3",
    "karma-tap-reporter": "0.0.6",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.0",
    "nyc": "^5.6.0",
    "postcss-loader": "^0.8.1",
    "postcss-modules": "^0.3.0",
    "react-addons-test-utils": "^0.14.7",
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.1.0",
    "redux-devtools-log-monitor": "^1.0.4",
    "rucksack-css": "^0.8.5",
    "style-loader": "^0.13.0",
    "stylint": "^1.3.6",
    "stylint-loader": "^1.0.0",
    "stylus-loader": "^1.5.1",
    "tape": "^4.4.0",
    "tape-catch": "^1.0.4",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.13",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.7.1",
    "xo": "^0.12.1",
    "xo-loader": "^0.5.0"
  }
}
